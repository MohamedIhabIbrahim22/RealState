 <script>
    $(document).ready(function() {
            // Initialize Fancybox
            $('[data-fancybox="gallery"]').fancybox({
                caption: function(instance, item) {
                    return $(this).find('img').attr('alt');
                }
            });

         let list = document.querySelectorAll(".navigation li");

         function activeLink() {
             list.forEach((item) => {
                 item.classList.remove("hovered");
             });
             this.classList.add("hovered");
         }

         list.forEach((item) => item.addEventListener("mouseover", activeLink));

         let toggle = document.querySelector(".toggle");
         let navigation = document.querySelector(".navigation");
         let main = document.querySelector(".main");

         toggle.onclick = function() {
             navigation.classList.toggle("active");
             main.classList.toggle("active");
         };

         document.querySelector(".tabled tbody").addEventListener("click", function(event) {
             if (event.target.tagName === "TD") {
                 const selectedRow = event.target.parentElement;
                 const selectedClass = "selected";
                 const rows = document.querySelectorAll(".tabled tbody tr");

                 for (const row of rows) {
                     if (row.classList.contains(selectedClass)) {
                         row.classList.remove(selectedClass);
                     }
                 }

                 selectedRow.classList.add(selectedClass);
             }
         });

         const deleteButton = document.querySelector("form[action='/admin/reject-post'] button[type='submit']:last-child");
         if (deleteButton) {
             deleteButton.addEventListener("click", function(event) {
                 event.preventDefault(); // prevent the form from submitting
                 const rows = document.querySelectorAll(".tabled tbody tr");
                 let selectedRow = null;
                 for (const row of rows) {
                     if (row.classList.contains("selected")) {
                         selectedRow = row;
                         break;
                     }
                 }
                 if (selectedRow) {
                     if (confirm("Are you sure you want to delete this order?")) {
                         const rows = document.querySelectorAll(".tabled tbody tr");
                         const selectedRowIndex = Array.from(rows).indexOf(selectedRow);
                         selectedRow.remove();
                     }
                 }
             });
         }

     });

     document.querySelectorAll('form[action="/admin/reject-post"]').forEach(form => {
        form.addEventListener('submit', function(event) {
            if (!confirm('Are you sure you want to reject this post?')) {
                event.preventDefault();
            }
        });
    });

    document.querySelectorAll('form[action="/admin/approve-post"]').forEach(form => {
        form.addEventListener('submit', function(event) {
            if (!confirm('Are you sure you want to approve this post?')) {
                event.preventDefault();
            }
        });
    });
 </script>

